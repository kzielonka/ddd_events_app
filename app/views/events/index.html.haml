.row
  .col-sm-12
    %h1.mb-4
      Buy event
    %table{ class: 'table table-hover' }
      %thead{ class: 'thead-dark' }
        %tr
          %th
            Title
          %th
            Description
          %th
            Total places
          %th
            Action
      %tbody
        - @events.each do |event|
          %tr
            %td
              = event.title
            %td
              = event.description
            %td
              = "#{event.free_places}/#{event.total_places}"
            %td
              = link_to 'Buy', event_path(event.id)
